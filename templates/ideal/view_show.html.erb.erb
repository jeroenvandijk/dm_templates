<div id="show">
  <%= model.page_title(:show) %>

  <div class="<%= model.singular_name %>">
<% model.attributes_for(:show).each do |attribute| %>
    <div class="attribute">
	    <div class="attribute_name format_<%= attribute.format %>"><%= attribute.display_name(:show) %></div>
	    <div class="attribute_value format_<%= attribute.format %>"><%= attribute.display(:show) %></div>
	  </div>
<% end -%>

<% model.associations_for(:show).each do |association| -%>
    <%= model.render_partial("@#{model.singular_name}.#{association.name}") %>
<% end -%>
  </div>

  <div class="link_to_edit"><%= model.link_to(:edit, :template => :show) %></div>
  <div class="link_to_destroy"><%= model.link_to(:destroy, :template => :show) %></div>
  <div class="link_to_index"><%= model.link_to(:index, :template => :show) %></div>
</div>