body { background-color: #fff; color: #333; }

body, p, ol, ul, td {
  font-family: verdana, arial, helvetica, sans-serif;
  font-size:   13px;
  line-height: 18px;
}

pre {
  background-color: #eee;
  padding: 10px;
  font-size: 11px;
}

a { color: #000; }
a:visited { color: #666; }
a:hover { color: #fff; background-color:#000; }

.fieldWithErrors {
  padding: 2px;
  background-color: red;
  display: table;
}

#errorExplanation {
  width: 400px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

#errorExplanation h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 15px;
  font-size: 12px;
  margin: -7px;
  background-color: #c00;
  color: #fff;
}

#errorExplanation p {
  color: #333;
  margin-bottom: 0;
  padding: 5px;
}

#errorExplanation ul li {
  font-size: 12px;
  list-style: square;
}

/* table layout exported from sass */
.listing .link_to_edit a {
  padding-left: 5px; padding-right:5px; }

.field_value {
  height: 100%;
  border-left: 1px solid white; }

.placeholder {
  height: 200px; }

.listing {
  display: inline-block; }
  .listing .odd {
    background-color: #ccccff; }
  .listing .even {
    background-color: #eeeeee; }
  .listing h3 {
    font-size: 1em; }

.partial {
  border-bottom: 1px solid white; }

.listing, .partial {
  clear: both; }
  .listing .field_value, .listing .field_label,   .partial .field_value, .partial .field_label {
    float: left; }
  .listing .link_to_edit, .listing .link_to_destroy,   .partial .link_to_edit, .partial .link_to_destroy {
    float: left; }
  .listing .format_string, .listing .format_name, .listing .format_url, .listing .format_text,   .partial .format_string, .partial .format_name, .partial .format_url, .partial .format_text {
    width: 300px; }
  .listing .format_integer, .listing .format_decimal, .listing .format_float,   .partial .format_integer, .partial .format_decimal, .partial .format_float {
    width: 80px; }
  .listing .format_datetime, .listing .format_date,   .partial .format_datetime, .partial .format_date {
    width: 80px; }
  .listing .format_file_column,   .partial .format_file_column {
    width: 10px; }
  .listing .format_boolean,   .partial .format_boolean {
    width: 60px; }
  .listing .format_html,   .partial .format_html {
    width: 800px; }